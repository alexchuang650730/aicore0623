{
  "name": "powerautomation-local-mcp",
  "displayName": "PowerAutomation v3.0.0",
  "description": "PowerAutomation v3.0.0 - Advanced AI Automation Platform with MCP Adapter",
  "version": "3.0.0",
  "publisher": "powerautomation",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Data Science",
    "Testing"
  ],
  "keywords": [
    "automation",
    "ai",
    "mcp",
    "powerautomation",
    "smartinvention",
    "testing",
    "browser automation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "powerautomation.showDashboard",
        "title": "Show Dashboard",
        "category": "PowerAutomation",
        "icon": "$(dashboard)"
      },
      {
        "command": "powerautomation.connectMCP",
        "title": "Connect to MCP Service",
        "category": "PowerAutomation",
        "icon": "$(plug)"
      },
      {
        "command": "powerautomation.disconnectMCP",
        "title": "Disconnect from MCP Service",
        "category": "PowerAutomation",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "powerautomation.showOutput",
        "title": "Show Output",
        "category": "PowerAutomation",
        "icon": "$(output)"
      },
      {
        "command": "powerautomation.generateApiKey",
        "title": "Generate API Key",
        "category": "PowerAutomation",
        "icon": "$(key)"
      },
      {
        "command": "powerautomation.testConnection",
        "title": "Test MCP Connection",
        "category": "PowerAutomation",
        "icon": "$(pulse)"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "powerautomation.chatView",
          "name": "AI Chat",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "PowerAutomation",
      "properties": {
        "powerautomation.mcpEndpoint": {
          "type": "string",
          "default": "http://localhost:8080/mcp/v3",
          "description": "MCP服務端點URL",
          "examples": [
            "http://localhost:8080/mcp/v3",
            "https://api.mcp-protocol.org/v3",
            "https://api.openai.com/v1/chat/completions"
          ]
        },
        "powerautomation.apiKey": {
          "type": "string",
          "default": "",
          "description": "API密鑰 (格式: pa_v3_...)",
          "pattern": "^pa_v3_.*"
        },
        "powerautomation.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "啟動時自動連接MCP服務"
        },
        "powerautomation.enableHeartbeat": {
          "type": "boolean",
          "default": true,
          "description": "啟用心跳檢測"
        },
        "powerautomation.heartbeatInterval": {
          "type": "number",
          "default": 30,
          "description": "心跳間隔（秒）",
          "minimum": 10,
          "maximum": 300
        },
        "powerautomation.timeout": {
          "type": "number",
          "default": 30000,
          "description": "請求超時時間（毫秒）",
          "minimum": 5000,
          "maximum": 120000
        },
        "powerautomation.retryCount": {
          "type": "number",
          "default": 3,
          "description": "重試次數",
          "minimum": 0,
          "maximum": 10
        },
        "powerautomation.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["debug", "info", "warn", "error"],
          "description": "日誌級別"
        },
        "powerautomation.enableSSL": {
          "type": "boolean",
          "default": true,
          "description": "啟用SSL驗證"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "powerautomation.showDashboard",
          "when": "true"
        },
        {
          "command": "powerautomation.connectMCP",
          "when": "true"
        },
        {
          "command": "powerautomation.disconnectMCP",
          "when": "true"
        },
        {
          "command": "powerautomation.showOutput",
          "when": "true"
        },
        {
          "command": "powerautomation.generateApiKey",
          "when": "true"
        },
        {
          "command": "powerautomation.testConnection",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexchuang650730/aicore0623.git"
  },
  "bugs": {
    "url": "https://github.com/alexchuang650730/aicore0623/issues"
  },
  "homepage": "https://github.com/alexchuang650730/aicore0623#readme"
}

